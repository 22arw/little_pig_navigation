<?xml version="1.0"?>

<launch>

  <!-- 
	Note: 
	 - Button mapping specific for Logitech and xbox joysticks 
	 - You may need to remap by changing params below
	-->
	<arg name="collect_button_num" value="3" />
	<arg name="collect_button_sym" value="Y" />
	<arg name="end_button_num" value="6" />
	<arg name="end_button_sym" value="BACK" />
	<arg name="coordinates_file_dir" value="/waypoint_files/points_sim.txt" />

  <!-- Run collect_gps_waypoints node -->
  	<node ns="/basic_laser_pig/simulation" pkg="little_pig_navigation" type="collect_gps_waypoints" name="collect_gps_waypoints" output="screen"/>
			<!-- WARNING: This will replace any file in this directory with the same name.-->
			<param name="/little_pig_navigation/coordinates_file" value="$(arg coordinates_file_dir)" type="string" />
			<param name="/basic_laser_pig/simulation/collect_button_num" value="$(arg collect_button_num)" type="int" />
			<param name="/basic_laser_pig/simulation/end_button_num" value="$(arg end_button_num)" type="int" />
			<param name="/basic_laser_pig/simulation/collect_button_sym" value="$(arg collect_button_sym)" type="string" />
			<param name="/basic_laser_pig/simulation/end_button_sym" value="$(arg end_button_sym)" type="string" />

</launch>
			 