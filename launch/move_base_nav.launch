<?xml version="1.0"?>

<launch>

  <node ns="/basic_laser_pig/simulation" pkg="move_base" type="move_base" respawn="false" name="move_base" > <!--output="screen"-->
    
    <rosparam file="$(find little_pig_navigation)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find little_pig_navigation)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find little_pig_navigation)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find little_pig_navigation)/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find little_pig_navigation)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find little_pig_navigation)/params/move_base_params.yaml" command="load" />
    
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS"/>

    <remap from="odom" to="/basic_laser_pig/simulation/odom_ekf_1/odom_filtered" />
    <remap from="cmd_vel" to="/basic_laser_pig/simulation/ackermann_controller/cmd_vel" />
    <remap from="/map" to="/basic_laser_pig/simulation/map" />

  </node>
</launch>